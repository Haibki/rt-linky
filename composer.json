{
    "name": "kaufdo/linky-generator",
    "description": "Modern Link-in-Bio Generator for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "KaufDo",
            "email": "info@kaufdo.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "KaufDo\\LinkyGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KaufDo\\LinkyGenerator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress src/",
        "phpstan": "phpstan analyse src/ --level=8"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
